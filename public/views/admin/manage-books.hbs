<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Online Library Management System | Manage Books</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="/public/a_assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME STYLE  -->
    <link href="/public/a_assets/css/font-awesome.css" rel="stylesheet" />
    <!-- DATATABLE STYLE  -->
    <link href="/public/a_assets/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="/public/a_assets/css/style.css" rel="stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

</head>

<body>
    <!------MENU SECTION START-->
    {{>admin/header}}
    <!-- MENU SECTION END-->
    <div class="content-wrapper">
        <div class="container">
            <div class="row pad-botm">
                <div class="col-md-12">
                    <h4 class="header-line">Manage Books</h4>
                </div>
                <div class="row">

                    {{#if error}}
                    <div class="col-md-6">
                        <div class="alert alert-danger">
                            <strong>Error :</strong>
                            {{error}}

                        </div>
                    </div>
                    {{/if}}

                    {{#if msg}}
                    <div class="col-md-6">
                        <div class="alert alert-success">
                            <strong>Success :</strong>
                            {{msg}}

                        </div>
                    </div>
                    {{/if}}

                    {{#if updatemsg}}
                    <div class="col-md-6">
                        <div class="alert alert-success">
                            <strong>Success :</strong>
                            {{updatemsg}}
                        </div>
                    </div>
                    {{/if}}

                    {{#if delmsg}}
                    <div class="col-md-6">
                        <div class="alert alert-success">
                            <strong>Success :</strong>
                            {{delmsg}}
                        </div>
                    </div>
                    {{/if}}
                </div>


            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Books Listing
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Book Name</th>
                                            <th>Category</th>
                                            <th>Author</th>
                                            <th>ISBN</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each result}}
                                        <tr class="odd gradeX">
                                            <td class="center">
                                                {{inc @index}}
                                            </td>
                                            <td class="center">
                                                {{this.BookName}}
                                            </td>
                                            <td class="center">
                                                {{this.CategoryName}}
                                            </td>
                                            <td class="center">
                                                {{this.AuthorName}}
                                            </td>
                                            <td class="center">
                                                {{this.ISBNNumber}}
                                            </td>
                                            <td class="center">
                                                {{this.BookPrice}}
                                            </td>
                                            <td class="center">
                                                <a href="edit-book?bookid={{this.bookid}}"><button
                                                        class="btn btn-primary"><i class="fa fa-edit "></i>
                                                        Edit</button>
                                                    <a href="manage-books?del={{this.bookid}}"
                                                        onclick="return confirm('Are you sure you want to delete?');">
                                                        <button class="
                                                        btn btn-danger"><i class="fa fa-pencil"></i> Delete</button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>



        </div>
    </div>

    <!-- CONTENT-WRAPPER SECTION END-->
    {{>admin/footer}}
    <!-- FOOTER SECTION END-->
    <!-- JAVASCRIPT FILES PLACED AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
    <!-- CORE JQUERY  -->
    <script src="/public/a_assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS  -->
    <script src="/public/a_assets/js/bootstrap.js"></script>
    <!-- DATATABLE SCRIPTS  -->
    <script src="/public/a_assets/js/dataTables/jquery.dataTables.js"></script>
    <script src="/public/a_assets/js/dataTables/dataTables.bootstrap.js"></script>
    <!-- CUSTOM SCRIPTS  -->
    <script src="/public/a_assets/js/custom.js"></script>
</body>

</html>